{
  "name": "crm",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && ./vendor/bin/pint --test",
    "type-check:frontend": "cd frontend && npx tsc --noEmit",
    "build:frontend": "cd frontend && npm run build"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "bash -c 'cd frontend && eslint --fix'",
      "bash -c 'cd frontend && npx tsc --noEmit'"
    ],
    "frontend/**/*.{js,jsx}": [
      "bash -c 'cd frontend && eslint --fix'"
    ],
    "backend/**/*.php": [
      "bash -c 'cd backend && ./vendor/bin/pint'"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
